<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="account1" class="tirwanda.dev.spring.entity.Account">
        <property name="id" value="1"/>
        <property name="accountNumber" value="001" />
        <property name="balance" value="300000" />
        <property name="name" value="Edho" />
    </bean>

    <bean id="account2" class="tirwanda.dev.spring.entity.Account">
        <property name="id" value="2"/>
        <property name="accountNumber" value="002" />
        <property name="balance" value="150000" />
        <property name="name" value="Dwi" />
    </bean>

    <bean id="accountRepository" class="tirwanda.dev.spring.repository.impl.AccountRepositoryImpl">
        <property name="accountMap">
            <map>
                <entry key="1" value-ref="account1"/>
                <entry key="2" value-ref="account2"/>
            </map>
        </property>
    </bean>
    
    <bean id="accountService" class="tirwanda.dev.spring.service.impl.AccountServiceImpl">
        <property name="accountRepositoryImpl" ref="accountRepository"/>
    </bean>

    <!-- more bean definitions go here -->

</beans>